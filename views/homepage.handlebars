{{#each posts as |post|}}
<div class="row mb-4">
    <div class="col-md-5">
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>
            Written by {{post.user_name}}
        </p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.contents}}
        </p>    
        </div>
    </div>
</div>
{{/each}}